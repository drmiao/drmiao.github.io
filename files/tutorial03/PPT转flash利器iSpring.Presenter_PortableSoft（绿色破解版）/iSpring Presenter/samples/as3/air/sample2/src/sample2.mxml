<?xml version="1.0" encoding="utf-8"?>
<mx:WindowedApplication xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" xmlns:air="ispring.air.*" initialize="onInit()" xmlns:flex="ispring.flex.*">
	<mx:Script source="main.as" />
	<mx:VBox height="100%" width="100%">
		<mx:ApplicationControlBar width="100%" 
				 horizontalAlign="center" 
				 paddingLeft="10" 
				 paddingTop="5" 
				 paddingBottom="5" 
				 horizontalGap="10">
			<mx:Button label="Open presentation" click="onBtnOpenPresentationClick()"/>
				 
			<mx:Button label="Close presentation" click="onBtnClosePresentationClick()"/>
		</mx:ApplicationControlBar>
		<mx:Box verticalAlign="middle" horizontalAlign="center" width="100%" height="100%">
			<flex:PresentationContainer id="presentationContainer" width="95%" height="95%"/>
		</mx:Box>
	</mx:VBox>
</mx:WindowedApplication>
